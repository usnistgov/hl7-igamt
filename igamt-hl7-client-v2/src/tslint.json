{
  "extends": "../tslint.json",
  "linterOptions": {
    "exclude": [
      "*.json"
    ]
  },
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "jsdoc-format": [
      false
    ],
    "max-classes-per-file": [
      false,
      1
    ]
  }
}
